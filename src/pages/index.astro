---
const response = await fetch(new URL('/api/posts.json', Astro.url));
const posts = await response.json();

const timestamp = new Date().toISOString();
---

<main class="container mx-auto p-4">
      <h1 class="text-3xl font-bold mb-4">Posts del Servidor</h1>
      <p class="mb-4">PÃ¡gina renderizada a las: {timestamp}</p>
      
      <div class="grid gap-4">
        {posts.map((post: { id: number, title: string; content: string; }) => (
          <article class="border p-4 rounded-lg shadow" id={`post-${post.id}`}>
            <h2 class="text-xl font-semibold">{post.title}</h2>
            <p class="mt-2 text-gray-600">{post.content}</p>
          </article>
        ))}
      </div>
    </main>